<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pista_clr"
    android:paddingTop="@dimen/_15sdp"
    tools:context=".registration">


    <ImageView
        android:id="@+id/loginbut"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:contentDescription="Back Button"
        android:src="@drawable/back2"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/create_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/loghere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_acc"
        android:layout_centerHorizontal="true"
        android:contentDescription="Account"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:minHeight="48dp"
        android:text="Account"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        tools:ignore="TextSizeCheck" />

    <RelativeLayout
        android:id="@+id/curvedbg_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle_container2"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilerg0"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/photocamera"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilerg0"
            android:text="Name"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/rgusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="Enter Your User Name"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgusername"
            android:layout_alignStart="@id/textView7"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Email"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/rgemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="Enter Your E-mail"
            android:padding="@dimen/_6sdp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgemail"
            android:layout_alignStart="@id/rgemail"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Phone No"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/rgphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView11"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="Enter your Phone Number "
            android:padding="@dimen/_6sdp"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgphone"
            android:layout_alignStart="@id/rgphone"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Password"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/rgpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:inputType="textPassword"
            android:hint="Enter Your Password"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgpassword"
            android:layout_alignStart="@id/rgpassword"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Condirm Password"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />


        <EditText
            android:id="@+id/rgrepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView10"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="Confirm Your Password"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />


        <TextView
            android:id="@+id/regisRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgrepassword"
            android:layout_alignStart="@id/rgpassword"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Role"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <Spinner
            android:id="@+id/roleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp"
            android:layout_below="@id/regisRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roleSpinner"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_38sdp"
            android:background="@drawable/loginbtn"
            android:minHeight="48dp"
            android:text="Register"
            android:textColor="@color/white" />


    </RelativeLayout>
</RelativeLayout>

