<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pista_clr"
    android:paddingTop="@dimen/_15sdp"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:contentDescription="Back Button"
        android:src="@drawable/back2"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/create_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Create_acc_text"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/backImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp" />

    <TextView
        android:id="@+id/loghere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:clickable="true"
        android:contentDescription="@string/Already_acc_text"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:minHeight="48dp"
        android:text="@string/Already_acc_text"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        tools:ignore="TextSizeCheck" />

    <RelativeLayout
        android:id="@+id/curvedbg_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle_container2"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profiler"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/camera"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/regisname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profiler"
            android:text="@string/Name"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/regisnamefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisname"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="@string/Name_text"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />

        <TextView
            android:id="@+id/regisEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisnamefield"
            android:layout_alignStart="@id/regisname"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/Email"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/regisEmailfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisEmail"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="@string/Email_text"
            android:padding="@dimen/_6sdp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/regisPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisEmailfield"
            android:layout_alignStart="@id/regisEmail"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/Phone_No"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/regisPhonefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisPhone"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="@string/Phone_text"
            android:padding="@dimen/_6sdp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/regisPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisPhonefield"
            android:layout_alignStart="@id/regisPhone"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/Pass"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/regisPassfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisPass"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="@string/Pass2_text"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />

        <TextView
            android:id="@+id/regisConfirmPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisPassfield"
            android:layout_alignStart="@id/regisPass"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/Confirm_Pass"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/regisConfirmPassfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisConfirmPass"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:hint="@string/Confirm_Pass_text"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp" />

        <TextView
            android:id="@+id/regisRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regisConfirmPassfield"
            android:layout_alignStart="@id/regisConfirmPass"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/Role"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <Spinner
            android:id="@+id/roleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/spinner_bg"
            android:minHeight="48dp"
            android:padding="@dimen/_6sdp"
            android:layout_below="@id/regisRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roleSpinner"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_28sdp"
            android:background="@drawable/loginbtn"
            android:minHeight="48dp"
            android:text="@string/Submit_btn"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>
